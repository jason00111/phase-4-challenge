<!DOCTYPE html>
<html>
<head>
  <title>Vinyl</title>
  <link rel="stylesheet" type="text/css" href="/style.css">
</head>
<body>

  <% include navbar %>

  <div class="main-image">
    <span class="main-title">Vinyl</span>
  </div>

  <h2>Records</h2>

  <div class="album-list">
    <% albums.forEach(function(album) { %>
      <div>
        <h5><a href="/albums/<%= album.id %>"><%= album.title %></a></h5>
        <span><%= album.artist %></span>
      </div>
    <% }) %>
  </div>

  <h2>Reviews</h2>

  <div class="review-list">
    <% reviews.forEach(function(review) { %>
      <div>
        <h5><a href="/albums/<%= review.album_id %>"><%= review.album %></a></h5>
        <p><%= review.artist %></p>
        <p><%= review.created %></p>
        <p><%= review.review %></p>
        <p>by <%= review.user %></p>
      </div>
    <% }) %>
  </div>

</body>
</html>
